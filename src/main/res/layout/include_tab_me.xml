<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg"
    android:orientation="vertical" >



    <RelativeLayout
        android:id="@+id/webMainLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/change_profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:onClick="ButtonClicked"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
             />

        <LinearLayout
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:onClick="ButtonClicked"
            android:layout_toRightOf="@+id/change_profile_image"
            android:layout_toLeftOf="@+id/qrcode"
            android:layout_centerVertical="true"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="center_vertical|left"
                android:layout_gravity="center_vertical|left"
                android:text="羽隅林"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/shuoshuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:layout_gravity="center_vertical|left"
                android:layout_marginTop="5dp"
                android:text="生命只有一次，执笔狂书"
                android:textColor="#a8a8a8"
                android:textSize="14sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/qrcode"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:visibility="gone"
            android:src="@drawable/icon_code" />

    </RelativeLayout>





    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/width_2_80"
        android:layout_marginRight="@dimen/width_2_80"
        android:background="@color/bg"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg"
            android:orientation="vertical" >


            <LinearLayout
                android:id="@+id/my_baoming"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:clickable="true"
                android:onClick="ButtonClicked"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_huod" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="报名的活动"
                    android:textColor="@color/main_black"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/my_comment_huodong"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:clickable="true"
                android:onClick="ButtonClicked"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_home_sponsorship01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="我的赞助与评论"
                    android:textColor="@color/main_black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/my_schedule"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/width_1_80"
                android:background="#ffffff"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="ButtonClicked"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:paddingTop="0dp" >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_my_kebiao" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center_vertical|left"
                    android:text="我的课表"
                    android:textColor="@color/main_black"
                    android:textSize="14dp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/help"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="10dp"
                android:background="#ffffff"
                android:clickable="true"
                android:onClick="ButtonClicked"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_set01" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="设置"
                    android:textColor="@color/main_black"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/security"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="@dimen/width_1_80"
                android:background="#ffffff"
                android:clickable="true"
                android:onClick="ButtonClicked"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_me_zhanghu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical|left"
                    android:text="账号安全"
                    android:textColor="@color/main_black"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>